#include <iostream>
using namespace std;


class Account {
private:
    float balance;

public:
    Account() : balance(0.0f) {}

    Account& setBalance(float b) {
        balance = b;
        return *this;
    }

    void showBalance() const {
        cout << "Balance: Rs. " << balance << endl;
    }
};


class Movie {
public:
    string title;
    float rating;

    void display() {
        cout << "Movie Title: " << title << endl;
        cout << "Rating: " << rating << "/10" << endl;
    }
};


int main() {
   
    Account acc;
    acc.setBalance(1500.75).showBalance();

    cout << endl;

   
    Movie* m = new Movie;
    m->title = "Inception";
    m->rating = 8.8;
    m->display();

   
    delete m;

    return 0;
}
